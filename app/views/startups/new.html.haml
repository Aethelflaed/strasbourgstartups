.container-narrow
  %h1= t("startups.index")
  = render partial: "explanation"
  = simple_form_for @startup  do |f|
    = f.error_notification
    = f.input :name, input_html: {class: 'input-xxlarge'}
    = f.input :url, input_html: {class: 'input-xxlarge'}
    = f.input :street, input_html: {class: 'input-xxlarge'}
    = f.input :zip_code, input_html: {class: 'input-xxlarge'}
    = f.input :city, input_html: {class: 'input-xxlarge'}
    = f.input :email, input_html: {class: 'input-xxlarge'}
    = f.input :description_fr, input_html: {class: 'input-xxlarge', :maxlength => '500', :lenghtcut => true, :rows => '7'}, as: :text, hint: (t("simple_form.labels.startup.char_count") + content_tag("span", nil, class: "char-count")).html_safe
    = f.input :description_en, input_html: {class: 'input-xxlarge', :maxlength => '500', :lenghtcut => true, :rows => '7'}, as: :text, hint: (t("simple_form.labels.startup.char_count") + content_tag("span", nil, class: "char-count")).html_safe
    = f.input :logo
    %br/
    %br/
    = f.button :submit, "Submit", :class => "btn btn-large btn-primary"
